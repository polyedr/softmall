  "item": [
    {
      "name": "Accounts",
      "item": [
        {
          "name": "Register Company",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "demo-key-123"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accounts/auth/register-company",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "auth",
                "register-company"
              ]
            },
            "description": "Создаёт компанию и администратора. Поддерживает Idempotency-Key.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Soft Corp\",\n  \"admin_username\": \"admin\",\n  \"admin_email\": \"admin@example.com\",\n  \"admin_password\": \"admin\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('201 or 200', function(){ pm.expect([200,201]).to.include(pm.response.code); });"
                ],
                "type": "text"
              }
            }
          ]
        },
        {
          "name": "Get Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accounts/auth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "auth",
                "token"
              ]
            },
            "description": "Получить JWT access/refresh.",
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"admin\", \"password\": \"admin\"}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "",
                  "pm.test('200 OK', function(){ pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('accessToken', json.access);",
                  "pm.environment.set('accessToken', json.access);"
                ],
                "type": "text"
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accounts/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "auth",
                "refresh"
              ]
            },
            "description": "Обновить access по refresh.",
            "body": {
              "mode": "raw",
              "raw": "{\"refresh\": \"<paste refresh here>\"}"
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/accounts/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "accounts",
                "me"
              ]
            },
            "description": "Профиль текущего пользователя."
          }
        }
      ]
